<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:id="@+id/filterDate"
        android:text="DÃ¡tum"
        android:textSize="20sp"
        android:singleLine="true"
        android:textAlignment="textEnd"
        android:contextClickable="true"
        android:paddingTop="0dp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:clickable="true"
        android:inputType="date"
        android:ems="10"
        android:textSize="20sp"
        android:id="@+id/filteredDate"
        android:textColor="#ffffff"
        android:text="2016.04.03."
        android:layout_gravity="center_horizontal" />
    <ImageButton
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:id="@+id/searchButton"
        android:layout_gravity="bottom|center"
        android:src="@android:drawable/ic_menu_search"
        style="@style/Base.Widget.AppCompat.ImageButton"
        android:baseline="@dimen/abc_action_button_min_width_overflow_material"
        android:background="@drawable/datecard"
        android:backgroundTint="#ffe600" />

</RelativeLayout>